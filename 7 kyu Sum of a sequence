/*
*   7 kyu Sum of a sequence
*   https://www.codewars.com/kata/586f6741c66d18c22800010a
* */

const sequenceSum = (begin, end, step) => {
  let result = [];
  for (let i = begin; i <= end; i+= step){
    result.push(i);
  }
  const resultSum = result.reduce((a, b) => a + b ,0);
  return resultSum;
};
