/*
*   7 kyu Area of a Circle
*   https://www.codewars.com/kata/537baa6f8f4b300b5900106c
* */

const circleArea = radius => {
  console.log(radius, typeof(radius),  radius**2 * Math.PI);
  if (radius > 0) return (radius**2 * Math.PI).toFixed(2)*1; 
  else throw new Error('Radius must be positive');
  }
